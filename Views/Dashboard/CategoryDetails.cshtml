@model Ecommerce_App.Models.DTO.CategoryDetailsDTO

Hello from category details!

<a asp-controller="Dashboard" asp-action="Index">Back Home to Categories!</a>

<a asp-controller="Dashboard" asp-action="ProductDetails">Go to Product Details!</a>

<h2>@Model.Name</h2>

<ul>
@foreach(var product in Model.Products){

    <li>
        <form asp-controller="Dashboard" asp-action="ProductDetails">
            <field>
                <input name= "ID" value= @product.Id type="hidden" />
            </field>
        <button>@product.Name</button>
        </form>
    </li>

}
</ul>